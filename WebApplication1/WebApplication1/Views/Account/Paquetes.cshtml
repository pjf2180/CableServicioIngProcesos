@{
    ViewBag.Title = "Usuario";
}
<style>
    th, td {
        padding: 15px;
        font-weight: bold;
    }
</style>
<div class="jumbotron">
    <p class="lead">
        Elige uno de nuestros paquetes de servicio.
        <img src="~/Content/Int.png" alt="Internet" width="50">
        <img src="~/Content/Telef.png" alt="Internet" width="50">
        <img src="~/Content/Telev.png" alt="Internet" width="50">
    </p>
</div>

<div class="row">
    <table align="center" style="width:80%">
        <tr>
            <th colspan="2" style="text-align:center">Servicios y paquetes</th>
            <th style="text-align:center">Precios</th>
        </tr>
        <tr style="background-color:#FFE6E6">
            <td style="text-align:center">
                <input checked="checked"
                       id="1"
                       name="Select"
                       type="radio" />
            </td>
            <td>Telefonía</td>
            <td style="text-align:center">$100</td>
        </tr>
        <tr style="background-color:#FFCCCC">
            <td style="text-align:center">
                <input id="2"
                       name="Select"
                       type="radio" />
            </td>
            <td>Televisión</td>
            <td style="text-align:center">$300</td>
        </tr>
        <tr style="background-color:#FFB3B3">
            <td style="text-align:center">
                <input id="3"
                       name="Select"
                       type="radio" />
            </td>
            <td>Telefonía+Televisión</td>
            <td style="text-align:center">$350</td>
        </tr>
        <tr style="background-color:#FF9999">
            <td style="text-align:center">
                <input id="4"
                       name="Select"
                       type="radio" />
            </td>
            <td>Internet 10 MEGAS</td>
            <td style="text-align:center">$300</td>
        </tr>
        <tr style="background-color:#FF8080">
            <td style="text-align:center">
                <input id="5"
                       name="Select"
                       type="radio" />
            </td>
            <td>Internet 20 MEGAS</td>
            <td style="text-align:center">$350</td>
        </tr>
        <tr style="background-color:#FF6666">
            <td style="text-align:center">
                <input id="6"
                       name="Select"
                       type="radio" />
            </td>
            <td>Telefonía+Internet 20 MEGAS</td>
            <td style="text-align:center">$380</td>
        </tr>
        <tr style="background-color:#FF4D4D">
            <td style="text-align:center">
                <input id="7"
                       name="Select"
                       type="radio" />
            </td>
            <td>Televisión+Internet 20 MEGAS</td>
            <td style="text-align:center">$450</td>
        </tr>
        <tr style="background-color:#FF3333">
            <td style="text-align:center">
                <input id="8"
                       name="Select"
                       type="radio" />
            </td>
            <td>Telefonía+Televisión+Internet 20 MEGAS</td>
            <td style="text-align:center">$500</td>
        </tr>
    </table>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <br />
                <input type="submit" class="btn btn-default" value="Continuar" />
            </div>
        </div>
    </div>
</div>
